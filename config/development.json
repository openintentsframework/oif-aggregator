{
  "server": {
    "host": "127.0.0.1",
    "port": 3000
  },
  "solvers": {
    "lifi-mainnet": {
      "solver_id": "lifi-mainnet",
      "adapter_id": "lifi-v1",
      "endpoint": "https://api.lifi.com/mainnet",
      "timeout_ms": 2000,
      "enabled": true,
      "max_retries": 2,
      "headers": {
        "User-Agent": "OIF-Aggregator/0.1.0"
      }
    },
    "example-solver": {
      "solver_id": "example-solver",
      "adapter_id": "oif-v1",
      "endpoint": "https://api.example.com/v1",
      "timeout_ms": 1500,
      "enabled": false,
      "max_retries": 1,
      "headers": null
    }
  },
  "timeouts": {
    "per_solver_ms": 2000,
    "global_ms": 4000,
    "request_ms": 5000
  },
  "environment": {
    "profile": "development",
    "debug": true,
    "metrics_enabled": true,
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 1000,
      "burst_size": 50
    }
  },
  "logging": {
    "level": "debug",
    "format": "pretty",
    "structured": false
  }
}