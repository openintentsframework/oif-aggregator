{
  "server": {
    "host": "0.0.0.0",
    "port": 4000
  },
  "solvers": {
    "demo-solver": {
      "solver_id": "demo-solver",
      "adapter_id": "oif-v1",
      "endpoint": "http://127.0.0.1:3000/api",
      "timeout_ms": 2000,
      "enabled": true,
      "max_retries": 2,
      "name": "Demo OIF Solver",
      "description": "Example solver endpoint (update with real solver URL)"
    }
  },
  "aggregation": {
    "global_timeout_ms": 5000,
    "per_solver_timeout_ms": 3000,
    "max_concurrent_solvers": 10,
    "max_retries_per_solver": 2,
    "retry_delay_ms": 100
  },
  "environment": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_size": 10
    }
  },
  "logging": {
    "level": "info",
    "format": "pretty",
    "structured": false
  },
  "security": {
    "integrity_secret": {
      "type": "env",
      "value": "INTEGRITY_SECRET"
    }
  }
}
